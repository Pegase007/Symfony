{% extends "TroiswaBugBundle::layout.html.twig" %}

{% block content %}

  {%  set uri= app.request.requestUri |split('/')|last %}
  {%  set page= uri |split('=')|last %}

  {#{{ dump(page) }}#}
  {#{{ dump(articles) }}#}



  {% for article in articles  %}




    <div class="post post-image">
      <div class="post-head"><h3><a href="single-blog.html">{{ article.title }}</a></h3>
      <div class="post-meta">
      <div><i class="fa fa-user"></i>BY : <a href="#">{{ article.author }}</a></div>
      <div><i class="fa fa-clock-o"></i>{{ article.date_created | date }}</div>
      <div><i class="fa fa-comments"></i><a href="#">{{ article.comments }} Comments</a></div>
      <div><i class="fa fa-folder-open"></i>IN : 
        {% for categorie in article.categories %}
          <a href="#">
            {% if loop.last %}
              {{ categorie }}
              {% else %}
            {{ categorie }},
              {%  endif %}
          </a>
        {% endfor %}
      </div>
      </div><!-- End post-meta -->
      <div class="clearfix"></div>
      </div><!-- End post-head -->
      <div class="post-wrap">
      <div class="post-img"><a href="single-blog.html"><img alt="" src="{{ asset("images/post-1.png") }}"></a></div>
      <div class="post-inner">
      <p>{{ article.description }}</p>
      <div class="clearfix"></div>
      <div class="post-share-view">
        <div class="post-meta">
          <div><i class="fa fa-eye"></i><span>{{ article.views }} </span>Views</div>
          <div class="post-meta-share">
            <i class="fa fa-share-alt"></i>
            <a href="#">Share This</a>
            <div class="share-social">
              <ul>
                <li class="social-facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li class="social-twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li class="social-google"><a href="#"><i class="fa fa-google-plus"></i></a></li>
              </ul>
              <i class="fa fa-caret-down"></i>
            </div><!-- End follow-social -->
          </div>
          <a href="single-blog.html" class="button post-more">Continue Reading</a>
        </div><!-- End post-meta -->
      </div><!-- End post-share-view -->
      <div class="clearfix"></div>
      </div><!-- End post-inner -->
      </div><!-- End post-wrap -->
    </div><!-- End post -->
  {% endfor %}



    <div class="page-navigation clearfix">
      <div class="nav-next col-md-3"><a href="#"><i class="fa fa-angle-double-left"></i><span>Old Entries</span></a></div>
      <div class=" col-md-6">

        {% for i in 1..nbpages %}

        <a href="{{ path("troiswa_bug_homepage",{page:i}) }}" class="btn btn-default" type="button">{{ i }}</a>

        {% endfor %}
      </div>
      <div class="nav-previous col-md-3"><a href="#"><span>New Entries</span><i class="fa fa-angle-double-right"></i></a></div>
    </div><!-- End page-navigation -->
{% endblock %}