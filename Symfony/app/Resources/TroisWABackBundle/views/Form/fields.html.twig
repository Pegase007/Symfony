
{%- block form_errors -%}
    {%- if errors|length > 0 -%}

        {%- for error in errors -%}
            <div class="alert alert-danger alert-dismissable alert-condensed">
                <i class="fa fa-exclamation-triangle append-icon"></i>
                <strong>{{ error.message }}</strong>

            </div>
        {%- endfor -%}
    {%- endif -%}
{%- endblock form_errors -%}


{% block tel_widget %}
    {% spaceless %}
        {% set type = 'phone' %}
        {{ block('form_widget_simple') }}

    {% endspaceless %}
{% endblock %}
