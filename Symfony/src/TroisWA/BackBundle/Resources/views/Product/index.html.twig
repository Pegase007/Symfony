{% extends "TroisWABackBundle::layoutBo2.html.twig" %}
{% block page %} Products {% endblock %}

 {% block stylesheets %}

     {{ parent() }}
     <!-- for specific page in style css -->
     <style>

         #product-table thead .heading th, #product-table thead .filter th{border-bottom:none; }
         #product-table thead .heading th {font-size: 14px; text-transform:uppercase; color:#FFF;}
         #product-table thead .filter th{
             background :#FFF;
             border-top:none;
             padding-top: 10px;
             padding-bottom:10px;

         }
         div.dataTables_length label{margin-bottom:0;}
         .dataTables_wrapper .dataTables_length{display:inline; margin-right:10px; float:none;}
         .dataTables_wrapper .dataTables_info{display: inline-block; padding-top: 2px; float:none;}

     </style>

 {% endblock %}

{% block content %}

    <div class="panel-body">
        <div class="clearfix">
        </div>
        <br>
        <div id="product-table_wrapper" class="dataTables_wrapper form-inline no-footer">
            <div class="row mgbt-xs-0">
                <div class="col-md-8 col-sm-12">
                    <div class="dataTables_length" id="product-table_length">
                        <label>Display &nbsp;
                            <select name="product-table_length" aria-controls="product-table" class="form-control input-sm">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </label>
                    </div>

                    <div class="dataTables_info" id="product-table_info" role="status" aria-live="polite">
                        Showing 0 to 0 of 0 entries
                    </div>
                    <div class="btn-group mgl-15 mgtp-5">
                        <button data-toggle="dropdown" class="btn vd_btn vd_bg-grey btn-xs dropdown-toggle mgl-10" type="button"> Tools<i class="fa fa-caret-down prepend-icon"></i> </button>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#">Export to XLS</a></li>
                            <li><a href="#">Import from XLS</a></li>
                            <li><a href="#">Print</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="dataTables_paginate paging_bootstrap" id="product-table_paginate">
                        <ul class="pagination">
                            <li class="prev disabled">
                                <a href="#"> ← Previous</a>
                            </li>
                            <li class="next disabled">
                                <a href="#">Next → </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="product-table_processing" class="dataTables_processing" style="display: none;">
                Processing...
            </div>
            <div class="table-scrollable"><table id="product-table" class="table table-striped table-hover table-responsive dataTable no-footer" aria-describedby="product-table_info" role="grid">
                    <thead class="vd_bg-dark-blue">
                    <tr class="heading" role="row"><th class="sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 20px;"><div class="vd_checkbox">
                                <input type="checkbox" id="checkbox-0">
                                <label for="checkbox-0"></label>
                            </div>
                        </th><th class="sorting_asc" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 50px;">ID</th><th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Photo" style="width: 80px;">Photo</th><th class="sorting" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending">Name</th><th class="sorting" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-label="Category: activate to sort column ascending" style="width: 150px;">Category</th><th class="sorting" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-label="Price: activate to sort column ascending" style="width: 100px;">Price</th><th class="sorting" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-label="Qty: activate to sort column ascending" style="width: 50px;">Qty</th><th class="sorting" tabindex="0" aria-controls="product-table" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 70px;">Status</th><th class="sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 100px;"></th></tr>
                    <tr class="filter" role="row"><th rowspan="1" colspan="1"><div class="vd_checkbox">
                                <input type="checkbox" id="checkbox-1">
                                <label for="checkbox-1"></label>
                            </div>
                        </th><th rowspan="1" colspan="1">ID</th><th rowspan="1" colspan="1">Photo</th><th rowspan="1" colspan="1">Name</th><th rowspan="1" colspan="1">Category</th><th rowspan="1" colspan="1">Price</th><th rowspan="1" colspan="1">Qty</th><th rowspan="1" colspan="1">Status</th><th rowspan="1" colspan="1"></th></tr>
                    </thead>
                    <tbody><tr class="odd"><td valign="top" colspan="9" class="dataTables_empty">Loading...</td></tr></tbody></table></div><div class="row"><div class="col-md-8 col-sm-12"><div class="bulk-action"></div></div><div class="col-md-4 col-sm-12"><div class="dataTables_paginate paging_bootstrap"><ul class="pagination"><li class="prev disabled"><a href="#">← Previous</a></li><li class="next disabled"><a href="#">Next → </a></li></ul></div></div></div><div class="dataTables_processing" style="display: none;">Processing...</div></div>
    </div>

{% endblock %}

