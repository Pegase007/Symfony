<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>
                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody><tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.title }}</td>
                        <td>{{ category.date_created|date("d/m/Y") }}</td>
                        <td><span class="label label-{% if category.active ==true %}success">Actif{% else %}warning">Not Actif{% endif %}</span></td>
                        <td>{{ category.description |raw }}</td>
                        <td>
                            <a href="{{ path("trois_wa_back_product",{'id':category.id} ) }}" class="btn btn-app-xs ">
                                <i class="fa fa-play"></i> See
                            </a>
                            <a href="" class="btn btn-app-xs ">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a href="" class="btn btn-app-xs ">
                                <i class="fa fa-trash-o"></i> Delete
                            </a>



                        </td>
                    </tr>
    {% endfor %}
                    </tbody></table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

{% endblock %}